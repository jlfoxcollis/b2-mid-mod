<p id="notice"><%= notice %></p>

<h1>Studios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studios.each do |studio| %>
      <tr>
        <td><%= studio.name %></td>
        <td><%= studio.location %></td>
      </tr>
        <% studio.movies.each do |movie| %>
        <tr>
          <td colspan="2"><%= link_to movie.title, movie_path(movie) %></td>
        <tr>
          <% end %>
    <% end %>
  </tbody>
</table>
